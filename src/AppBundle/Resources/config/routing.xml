<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
  <!-- DefaultController -->
  <!-- DefaultController → index -->
  <route id="index" path="/">
    <default key="_controller">AppBundle:Default:index</default>
  </route>

  <!-- GameController -->
  <!-- GameController → list -->
  <route id="list" path="/games/">
    <default key="_controller">AppBundle:Game:list</default>
  </route>
  <!-- GameController → join -->
  <route id="join" path="/games/join">
    <default key="_controller">AppBundle:Game:join</default>
  </route>
  <!-- GameController → leave -->
  <route id="leave" path="/games/leave">
    <default key="_controller">AppBundle:Game:leave</default>
  </route>
  <!-- GameController → current -->
  <route id="current" path="/games/current">
    <default key="_controller">AppBundle:Game:current</default>
  </route>

  <!-- FaviconController -->
  <!-- FaviconController → manifest.json -->
  <route id="favicon_manifest" path="/manifest.json">
    <default key="_controller">AppBundle:Favicon:manifest</default>
  </route>

  <!-- FaviconController → browserconfig.xml -->
  <route id="favicon_browserconfig" path="/browserconfig.xml">
    <default key="_controller">AppBundle:Favicon:browserConfig</default>
  </route>
</routes>
